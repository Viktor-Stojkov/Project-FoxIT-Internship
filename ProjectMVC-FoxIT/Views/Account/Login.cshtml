@model Login;

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Login" method="post">
    <div>
        <div class="col-10 offset-1">

                <h2 class="text-center">Најави се</h2>
                <br />
                <div class="form-group">
                    <label asp-for="Username">Корисничко Име</label>
                    <input type="email" asp-for="Username" class="form-control col-12" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Лозинка</label>
                    <input type="password" asp-for="Password" class="form-control col-12" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <p class="text-center"><a href="Account/ForgotPassword">Заборавена Лозинка?</a></p>
                <p class="col-12"><button type="submit" class="btn btn-success" style="width: 50%">Најава</button></p>
                <p class="col-12 text-center text-danger">@Html.ValidationMessage("Error")</p>
                <h4 class="col-12 text-center text-success">@Html.ValidationMessage("Success")</h4>
        </div>
    </div>
</form>